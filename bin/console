#!/usr/bin/env php
<?php

use App\Infrastructure\Command\LoadFixturesCommand;
use Symfony\Component\Console\Application;

require_once __DIR__ . '/../vendor/autoload.php';

$container = require __DIR__ . '/../src/bootstrap.php';

$application = new Application('Simão Refrigeração Console', '1.0.0');

// Registrar comandos
$entityManager = $container->get('doctrine.entity_manager');
$application->add(new LoadFixturesCommand($entityManager));

$application->run();