# Arquivo .htaccess principal
# Redireciona todas as requisições para a pasta public

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Não redirecionar se o arquivo ou diretório existir na raiz
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirecionar para a pasta public
    RewriteRule ^(.*)$ public/$1 [L]
    
    # Redirecionar URLs antigas para a nova estrutura
    RewriteRule ^admin-([a-z-]+)\.php$ public/admin/$1.php [R=301,L]
    RewriteRule ^tecnico-([a-z-]+)\.php$ public/tecnico/$1.php [R=301,L]
    
    # Se o arquivo não existir na pasta public, redirecionar para o index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^public/(.*)$ public/index.php [QSA,L]
</IfModule>

# Configurações de PHP
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Configurações de segurança
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Desabilitar listagem de diretórios
Options -Indexes

# Proteger arquivos sensíveis
<FilesMatch "^(\.htaccess|\.env|composer\.json|composer\.lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger diretórios sensíveis
<IfModule mod_rewrite.c>
    RewriteRule ^(config|src|controllers|vendor)/.*$ - [F,L]
</IfModule>